syntax = "v1"

type (
	ArticleRequest {
		Id int `path:"id"`
	}
	Article {
		Id          int    `json:"id"`
		Title       string `json:"title"`
		Content     string `json:"content"`
		Description string `json:"description"`
		Picture     string `json:"picture"`
	}
)

@server (
	group:  article
	prefix: /api/article
)
service zerogorm-api {
	@handler GetArticleById
	get /:id (ArticleRequest) returns (CommonResponse)
}

